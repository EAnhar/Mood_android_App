<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/sessionb"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".sessions">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:scaleType="centerInside"
        android:layout_margin="30dp"
        android:text="Relax"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"></TextView>

    <HorizontalScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="2dp"
            >
            <!--صوت -->
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="2dp"
                android:padding="2dp"
                android:id="@+id/one"
                app:cardCornerRadius="15dp"
                android:layout_margin="20dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:src="@drawable/relaximg" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-20dp"
                    >

                    <ImageView
                        android:id="@+id/playbtn1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:onClick="playptn1"
                        android:src="@drawable/okay"
                        android:tag="playbtn1" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <!--صوت -->

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="2dp"
                android:padding="2dp"
                android:id="@+id/two"
                android:layout_margin="20dp"

                android:layout_toEndOf="@id/one"
                app:cardCornerRadius="15dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:src="@drawable/relaximg" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-20dp"
                    >

                    <ImageView
                        android:id="@+id/playbtn2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:onClick="playptn1"
                        android:src="@drawable/okay"
                        android:tag="playbtn1" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <!--صوت -->

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="2dp"
                android:padding="2dp"
                android:id="@+id/three"
                android:layout_margin="20dp"

                android:layout_toEndOf="@id/one"
                app:cardCornerRadius="15dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:src="@drawable/relaximg" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-20dp"
                    >

                    <ImageView
                        android:id="@+id/playbtn3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:onClick="playptn1"
                        android:src="@drawable/okay"
                        android:tag="playbtn1" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <!--صوت -->

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="2dp"
                android:padding="2dp"
                android:id="@+id/four"
                android:layout_margin="20dp"
                android:layout_toEndOf="@id/three"
                app:cardCornerRadius="15dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:src="@drawable/relaximg" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-20dp"
                    >

                    <ImageView
                        android:id="@+id/playbtn4"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:onClick="playptn1"
                        android:src="@drawable/okay"
                        android:tag="playbtn1" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </HorizontalScrollView>

